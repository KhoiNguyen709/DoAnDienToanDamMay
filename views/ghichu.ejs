<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <title>
        <%= title %> - Quản lý ghi chú
    </title>
</head>

<body>
    <div class="container">
        <%- include('header') %>
        <!-- Menu ngang -->
        <%- include('navbar') %>

            <!-- Nội dung chính -->
            <div class="card mt-3">
                <div class="card-header">
                    <%= title %>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-bordered table-hover table-sm mb-0">
                        <thead>
                            <tr>
                                <th width="10%">STT</th>
                                <th width="35%">Tiêu đề</th>
                                <th width="15%">Ngày đăng</th>
                                <th width="10%">Xem chi tiết</th>
                                <th width="10%">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% var stt=1; %>
                                <% ghichu.forEach(gc=> { %>
                                    <tr>
                                        <td class="align-middle">
                                            <%= stt++ %>
                                        </td>
                                        <td class="align-middle">
                                            <%= gc.TieuDe %>
                                        </td>
                                        <td class="align-middle small">
                                            <%= gc.NgayDang ? new Date(gc.NgayDang).toLocaleString("vi-VN") : "" %>
                                        </td>
                                        <td class="align-middle text-center">
                                            <a href="/ghichu/chitiet/<%= gc._id %>" title="Sửa">
                                                <i class="bi bi-eye text-primary"></i>
                                            </a>
                                        </td>
                                        <td class="align-middle text-center">
                                            <a href="/ghichu/xoa/<%= gc._id %>"
                                                onclick="return confirm('Bạn có chắc muốn xóa ghi chú này không?');"
                                                title="Xóa">
                                                <i class="bi bi-trash text-danger"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Footer -->
            <%- include('footer') %>
    </div>

    <%- include('javascript') %>
</body>

</html>